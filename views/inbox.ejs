<!DOCTYPE html>
<html>
  <head>
    <title>Inbox</title>
    <% include ./base/head %>
  </head>
  <body>
    <% include ./base/nav %>
    <% include ./base/scripts %>
    <div class="row">
      <h1 class="col-md-3">Messages</h1>
      <div class="col-md-3">
        <%- include("./base/newButton", {newUrl: "/messages/new"}) %>
      </div>
    </div>
    <% if (messagelist && messagelist.length) { %>
      <ul class="right-margin">
        <% messagelist.forEach((item) => { %>
          <%- include("./base/messagePanel", {
            sender: item.sender,
            text: item.messagetext
          }) %>
        <% }) %>
      </ul>
    <% } %>
    <%- include("./base/newButton", {newUrl: "/messages/new"}) %>
    <% include ./base/footer %>
  </body>
</html>