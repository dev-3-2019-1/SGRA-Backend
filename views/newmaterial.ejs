<!DOCTYPE html>
<html>
  <head>
    <title>Manter Material</title>
    <link rel='stylesheet' href='/public/stylesheets/style.css' type="text/css"/>
  </head>
  <body>
    <h1><%= title %></h1>
    <form id="formAddMaterial" name="addmaterial" method="post" action="<%= action %>">
      <input type="hidden" value="<%= material._id %>" name="_id" />
      <p>Nome</p>
      <input id="inputMaterialName" type="text" placeholder="" name="materialname" value="<%= material.materialname %>" />
      <p>Descrição</p>
      <input id="inputMaterialDescription" type="text" placeholder="" name="materialdescription" value="<%= material.materialdescription %>" />
      <p>Unidade de Medida</p>
      <input id="inputMaterialMeasure" type="text" placeholder="" name="materialmeasure" value="<%= material.materialmeasure %>" />
      
      <p>Projeto Relacionado</p>
      <% if (projectlist && projectlist.length) { %>
        <select name="project" >
          <% projectlist.forEach((item) => { %>
            <option value="<%= item._id %>" <%= material.project && (material.project == item._id) ? 'selected' : '' %> ><%= item.projectname %></option>
          <% }) %>
        </select>
      <% } %>

      <p>Consumo</p>
      <input id="inputMaterialUsage" type="number" step="0.01" min="0" placeholder="" name="materialusage" value="<%= material.materialusage %>" />

      <p>Usuário Responsável</p>
      <% if (userlist && userlist.length) { %>
        <select name="responsibleuser" >
          <% userlist.forEach((item) => { %>
            <option value="<%= item._id %>" <%= material.responsibleuser && (material.responsibleuser == item._id) ? 'selected' : '' %> ><%= item.username %></option>
          <% }) %>
        </select>
      <% } %>
      
      <p></p>
      <button id="btnSubmit" type="submit">Salvar</button>
    </form>
  </body>
</html>