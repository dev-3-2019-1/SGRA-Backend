<!DOCTYPE html>
<html>
  <head>
    <title>Material List</title>
    <% include ./base/head %>
  </head>
  <body>
    <% include ./base/nav %>
    <% include ./base/scripts %>
    <h1>Material List</h1>
    <% if (materiallist && materiallist.length) { %>
      <ul>
        <% materiallist.forEach((item) => { %>
          <li>
            <a class="test" href="/materials/<%= item._id %>/edit"><%= item.materialname %></a>
            <a href="/materials/<%= item._id %>/delete">Delete</a>
          </li>
        <% }) %>
      </ul>
    <% } %>
    <%- include("./base/newButton", {newUrl: "/materials/new"}) %>
    <% include ./base/footer %>
  </body>
</html>